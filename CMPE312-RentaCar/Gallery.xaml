    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource = "page_background.jpg"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Left" Height="638" VerticalAlignment="Top" Width="171" Opacity="0.28" Margin="0,0,0,-34">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF020202" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

        </Grid>
        <Image HorizontalAlignment="Left" Height="54" VerticalAlignment="Top" Width="59" Source="menu2.png" Margin="112,1,0,0"/>
        <Image HorizontalAlignment="Left" Height="109" Margin="1173,0,0,0" VerticalAlignment="Top" Width="109" Source="Logo.png"/>
        <Image HorizontalAlignment="Left" Height="124" Margin="-5,513,0,-2" VerticalAlignment="Top" Width="404" Source="car_icon.png"/>
        <Grid>
            <Button x:Name="gallery" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Click="gallery_Click" Margin="-8,137,1110,395" Height="72" Width="190" BorderThickness="0" Style="{DynamicResource Galery_ButtonStyle}">
                <Button.Background>
                    <ImageBrush ImageSource="gallery.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="333*"/>
                <RowDefinition Height="271*"/>
            </Grid.RowDefinitions>
            <Button x:Name="adding" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Click="adding_Click" Margin="-8,217,1110,45" Height="71" Width="190" BorderThickness="0" Style="{DynamicResource Adding_ButtonStyle}">
                <Button.Background>
                    <ImageBrush ImageSource="ADD_VEHICLE.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <Grid Margin="10,-26,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="99*"/>
                <RowDefinition Height="52*"/>
            </Grid.RowDefinitions>
            <Button x:Name="history" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Click="history_Click" Margin="-17,324,1109,17" Height="72" Width="190" BorderThickness="0" Style="{DynamicResource History_ButtonStyle}">
                <Button.Background>
                    <ImageBrush ImageSource="history.png"/>
                </Button.Background>
            </Button>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="333*"/>
                <RowDefinition Height="271*"/>
            </Grid.RowDefinitions>
            <Button x:Name="poweroff" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Click="poweroff_Click" Margin="9,17,1241,285" Height="31" Width="42" BorderThickness="0" Style="{DynamicResource poweroff_Style}" >
                <Button.Background>
                    <ImageBrush ImageSource="icons/power_off.png"/>
                </Button.Background>
            </Button>
            <DataGrid x:Name="dataGrid2" 
                      HorizontalAlignment="Left" Height="56" Margin="730,281,0,0" 
                      VerticalAlignment="Top" Width="545"
                      AutoGenerateColumns="True" 
                      RowHeight="30" ColumnWidth="100"
                      GridLinesVisibility="Vertical" HeadersVisibility="All"
                      FontSize="15"
                      Background="LightGray" RowBackground="LightYellow" AlternatingRowBackground="LightBlue" SelectionChanged="dataGrid2_SelectionChanged"
                      />
            <TextBox x:Name="textbox1" HorizontalAlignment="Left" Height="24" Margin="538,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" TextChanged="textbox1_TextChanged"/>
            <Label Content="Car Informations" HorizontalAlignment="Left" Margin="215,100,0,0" VerticalAlignment="Top" FontSize="25" FontWeight="Bold" Foreground="Black"/>
            <Label Content="Details" HorizontalAlignment="Left" Margin="728,244,0,0" VerticalAlignment="Top" FontSize="25" FontWeight="Bold" Foreground="#FF020202"/>
            <Button x:Name="Modify_Button" Content="Modify" HorizontalAlignment="Left" Margin="757,339,0,0" VerticalAlignment="Top" Width="493" Background="#FF72C9DC" FontSize="15" FontWeight="Bold" Opacity="0.65" Grid.RowSpan="2" Click="Modify_Button_Click"/>
            <Button x:Name="filter" Content="Filter" HorizontalAlignment="Left" Margin="673,113,0,0" VerticalAlignment="Top" Width="53" Height="24" Click="filter_Click"/>
        </Grid>
        <DataGrid Name="datagrid1" HorizontalAlignment="Left" Height="345" Margin="217,136,0,0"
                  VerticalAlignment="Top" Width="509" 
                  AddingNewItem="datagrid1_AddingNewItem" 
                  AutoGenerateColumns="True" 
                  RowHeight="30" ColumnWidth="100"
                  GridLinesVisibility="Vertical" HeadersVisibility="All"
                  FontSize="15"
                  Background="LightGray" RowBackground="LightYellow" AlternatingRowBackground="LightBlue" SelectionChanged="datagrid1_SelectionChanged"
                  />
        <Button x:Name="Home" HorizontalAlignment="Center" VerticalAlignment="Center" 
